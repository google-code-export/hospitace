<% title :users, :small=>t(:users,:scope=>"title.small"), :action_title=>:new_user,:action=>new_user_path %>

<%= render :layout=>'datagrid' do |user| %>

    <%= action_icon :show,"icon-info-sign",user,{},:show,user %>
    <%= action_icon :edit,"icon-pencil",edit_user_path(user),{},:update,user %>
    <%= action_icon :destroy,"icon-remove",user,{confirm: t(:confirm), method: :delete},:destroy,user %>

<%end%>