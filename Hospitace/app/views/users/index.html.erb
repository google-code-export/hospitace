<% title :users, :small=>t(:users,:scope=>"title.small"), :action_title=>:new_user,:action=>new_user_path %>

<%= render :layout=>'datagrid' do |user| %>

    <%= link_to t(:show), user %>
    <%= link_to t(:edit), edit_user_path(user) %>
    <%= link_to t(:destroy), user, confirm: t(:confirm), method: :delete %> 

<%end%>