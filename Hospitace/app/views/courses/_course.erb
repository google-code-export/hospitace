<% title :course, :small=>"#{course.name} (#{course.code})" %>

<% instance = course.instance %>

<%= show_item(t("course.name"), course.name) %>

<%= show_item(t("course.code"), course.code) %>

<%= show_item(t("course.occupied"), instance.occupied) %>

<%= show_item(t("course.study_form"), course.study_form) %>

<%= show_item(t("course.range"), course.range) %>

<%= show_item(t("course.editors"), full_url_peoples(instance.editors)) %>

<%= show_item(t("course.examiners"), full_url_peoples(instance.examiners)) %>

<%= show_item(t("course.guarantors"), full_url_peoples(instance.guarantors)) %>

<%= show_item(t("course.instructors"), full_url_peoples(instance.instructors)) %>

<%= show_item(t("course.lecturers"), full_url_peoples(instance.lecturers)) %>
