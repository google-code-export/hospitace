<% instance = course.instance %>



  <dl class="dl-horizontal">
    <%= show_item(t("course.name"), course.name) %>

    <%= show_item(t("course.code"), course.code) %>

    <%= show_item(t("course.occupied"), instance.occupied) unless instance.nil? %>

    <%= show_item(t("course.study_form"), course.study_form_t) %>

    <%= show_item(t("course.range"), course.range) %>

    <%= show_item(t("course.guarantors"), full_url_peoples(instance.guarantors))  unless instance.nil? %>

    <%= show_item(t("course.lecturers"), full_url_peoples(instance.lecturers))  unless instance.nil? %>
  </dl>
