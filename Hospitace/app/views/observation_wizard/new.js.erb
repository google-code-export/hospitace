

<% if @_controller.current_step == :step1 %>

$('#datagrid').html('<%= escape_javascript(
  
       render(:layout=>"users/datagrid",:locals => { :peoples => @peoples }) { |user| 
         radio_button "observation", :user_id, user.id
       }

) %>');  

<% elsif @_controller.current_step == :step2 %>

$('#datagrid').html('<%= escape_javascript(
  
       render(:layout=>"courses/datagrid",:locals => { :courses => @courses }) { |course| 
         radio_button "observation", :course, course.code  
       }

) %>');

<% end %>
