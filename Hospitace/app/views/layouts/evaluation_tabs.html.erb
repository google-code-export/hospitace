
<% content_for :content do %>
  <ul class="nav nav-tabs">
        <%= tab_item(:info,@evaluation) if can? :show, @observation %> 
        <%= tab_item(:attachments,evaluation_attachments_path(@evaluation)) if can? :show, @observation %> 
          
        <%= tab_item(:protocol,evaluation_a_path(@evaluation)) %>
        <%= tab_item(:verbal_evaluation,evaluation_b_path(@evaluation)) %>
        <%= tab_item(:opinion,evaluation_c_path(@evaluation)) %>
        <%= tab_item(:final_report,evaluation_d_path(@evaluation),:read,User) %>
  </ul>
  <%= message( t("observation.warning"),@observation.state.long_message,@observation.state.actions) if !@observation.state.ok? && can?(:update,@observation) %>
  <%= content_for?(:news_content) ? yield(:news_content) : yield %>
<% end %>
<%= render :template => 'layouts/application' %>