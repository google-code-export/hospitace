<%= simple_form_for(@observation,:wrapper => :inline) do |f| %>
  <% if f.error_notification %>
    <div class="alert-message warning fade in" data-alert="alert">
      <a class="close" href="#">×</a>
      <%= f.error_notification %>
    </div>
  <% end %>


<%#= debug flash %>
<%#= debug @observation %>
  <%= f.input :semester, :collection =>Semester.find_current_and_next.collect {|p| [p.name, p.code]},:value =>:code, :as => :select, :selected=>Semester.current_semester %>
  <%= f.input :course,:placeholder => 'Kód předmětu' , :hint => link_to("Najít kód předmětu", "/observations/courses") %>
  <% if @observation.course.nil?  %>
    <%= f.input :parallel, :as=>:select, :disabled => true %>
  <% else %>
    <%= f.input :parallel, :as=>:select, :hint => link_to("Najít paralelku", course_parallels_select_path(@observation.course)), :collection=>Parallel.find_by_course(@observation.course).collect {|p| ["\##{p.parallel_number} #{p.day}", p.id]} %>
  <% end %>

  <%= f.input :observation_type, :collection =>Observation::TYPES,  :as => :select, :selected=>Observation::TYPES[1], :required=>true %>

  <div class="actions">
	<%= f.button :submit, :class => 'btn primary' %>
	<%= button_tag 'Cancel', :type => :reset, :class => "btn" %>
  </div>
<% end %>
