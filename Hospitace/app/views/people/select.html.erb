<% title :peoples, :small=>t(:person,:scope=>"title.small.select")%>

<%= simple_form_for :people, :html => { :class => 'form-horizontal' }  do |f| %>

  <%= render :layout => 'datagrid', :locals => { :peoples => @peoples } do |person| %>
      <%= radio_button_tag :people_id, person.id  %>
  <% end  %>

  <div class="form-actions">
	<%= f.submit "Vybrat", :class => 'btn btn-primary' %>
	<%#= button_tag 'Cancel', :type => :reset, :class => "btn" %>
  </div>

<% end %>
