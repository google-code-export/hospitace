<% title :observation, :small=>"nastavení paralelky a datumu pro #{@observation.find_course.name} (#{@observation.course})" %>

<% unless @observation.parallel.empty? %>
  <h2><%= t :setting_parallel %></h2>
    <%= render :partial=>'parallels/parallel', :object => Parallel.find(@observation.course,@observation.parallel) %>
  <hr />
<% end %>

<%= simple_form_for @observation,:wrapper => :inline do |f| %>
  <% if f.error_notification %>
    <div class="alert-message warning fade in" data-alert="alert">
      <a class="close" href="#">×</a>
      <%= f.error_notification %>
    </div>
  <% end %>


  <%= f.input :parallel, :as=>:select, :hint => link_to("Najít paralelku", course_parallels_select_path(@observation.course)), :collection=>Parallel.find_by_course(@observation.course).collect {|p| ["\##{p.parallel_number} #{p.day}", p.id]} %>
  <%= f.input :date %>

  <div class="actions">
    <%= f.button :submit, :class => 'btn primary' %>
  </div>
<% end %>
