<%
time = parallel_time_start(@parallel) unless @parallel.nil?
date = @observation.date && l(@observation.date,:format=>"%d. %m. %Y") 
room = @parallel.room.code unless @parallel.nil? || @parallel.room.nil?
teachers = full_url_peoples(@parallel.teachers) unless @parallel.nil?
%>
<div class="observation">
  <div class="span4">
    <h2>Informace o hospitaci</h2>
    <dl class="dl-horizontal">

      <%= show_item(Observation.human_attribute_name(:state), label_span(t(@observation.state.short_message),(@observation.state.ok? ? :success : :warning)) ) %>
      <%= show_item(Observation.human_attribute_name(:semester), @observation.semester.name) %>
      <%= show_item(Observation.human_attribute_name(:observation_type), t(@observation.observation_type)) %>
      <%= show_item(Observation.human_attribute_name(:head_of_department), full_url_people(@observation.head_of_department)) %>
      <%= show_item(Observation.human_attribute_name(:observed), teachers) %>
      <%= show_item(Observer.model_name.human, full_url_peoples(@observation.observers_people)) %>

      <%= show_item(Observation.human_attribute_name(:date_and_time), "#{date} #{time}, #{room}") %>
      <%= show_item(Observation.human_attribute_name(:created_by), render(@observation.created_by)) %>
    </dl>
  </div>

  <div class="span4">
    <h2>Předmět</h2>
    <%= render :partial=>"courses/course", :locals => { :course => @course } unless @course.nil? %>
  </div>
  <div class="span4">
    <h2>Paralelka</h2>
    <%= render :partial=>"parallels/parallel", :locals => { :parallel => @parallel } unless @parallel.nil? %>
  </div>
</div>
