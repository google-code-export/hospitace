<% content_for :secoundary_content do %>
	
	<div class="header">
		<h2>Nápověda</h2>
	</div>
<p>
  Pro vložení generovaných dat je potřeba vložit značku do textu správy ve tvaru %znacka%.
</p>
<h3>Seznam značek:</h3>	
<br/>
<h4>Formulář</h4>	
<dl class="dl-horizontal">
  <dt>Kód formuláře</dt>
  <dd>%form_code%</dd>
  <dt>Jméno formuláře</dt>
  <dd>%form_name%</dd>
  <dt>Vytvořil</dt>
  <dd>%form_author%</dd>
  <dt>Vytvořen v</dt>
  <dd>%form_created_at%</dd>
  <dt>Adresa na formulář</dt>
  <dd>%form_url%</dd>
</dl>

<h4>Osoby</h4>	
<p>guarant, teacher, observers, head_of_department, administrator</p>
<dl class="dl-horizontal">
  <dt>Jméno</dt>
  <dd>_name</dd>
  <dt>Email</dt>
  <dd>_email</dd>
  <dt>Login</dt>
  <dd>_username</dd>
</dl>

<h4>Předmět</h4>	
<dl class="dl-horizontal">
  <dt>Kód předmětu</dt>
  <dd>%course_code%</dd>
  <dt>Název předmětu</dt>
  <dd>%course_name%</dd>
</dl>

<h4>Paralelka</h4>	
<dl class="dl-horizontal">
  <dt>Číslo paralelky</dt>
  <dd>%parallel_number%</dd>
  <dt>Začátek vyučování</dt>
  <dd>%parallel_start%</dd>
  <dt>Konec vyučování</dt>
  <dd>%parallel_finish%</dd>
  <dt>Den vyučování</dt>
  <dd>%parallel_day_t%</dd>
  <dt>Typ paralelky</dt>
  <dd>%parallel_parallel_type_t%</dd>
</dl>

<h4>Semestr</h4>	
<dl class="dl-horizontal">
  <dt>Kód</dt>
  <dd>%semester_code%</dd>
  <dt>Název</dt>
  <dd>%semester_name%</dd>
</dl>

<h4>URL adresy</h4>	
<dl class="dl-horizontal">
  <dt>Formuláře</dt>
  <dd>%form_url%</dd>
  <dt>Hospitace</dt>
  <dd>%observation_url%</dd>
  <dt>Hodnocení</dt>
  <dd>%evaluation_url%</dd>
</dl>
<% end %> 

<%= simple_form_for(@email_template) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :text , :input_html=>{:class=>:width_100, :rows=>10}%>
    <%= f.input :form_code, :as=>:select, :collection=>EmailTemplate.events.collect{|i| [t(i[2]),i[2]]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
